<% include ../partials/header %>

  <hr>
  <div class="w3-center w3-padding-32">
    <h2>Manage Contact Requests</h2>
  </div>

  <div class="w3-row-padding">
  <% forms.forEach(function(forms) { %>
  <div class="w3-quarter">
  <div class="w3-card white" style="height:500px">
    <div class="w3-container w3-teal">
      <h3>Request # <%= forms.id %> 
      <a class="w3-right w3-container w3-button" style="color:teal; font-size:smaller; background-color:white;" href="/delete/<%= forms.id %>"> Clear</a></h3>
    </div>
    <ul class="w3-ul w3-border-top">
      <li>
        <p class="w3-text-teal">Contact Name:</p>
        <p><%= forms.fname %> <%= forms.lname %></p>
      </li>
      <li>
        <p class="w3-text-teal">Contact Details:</p>
        <p><%= forms.email %> <%= forms.phone %></p>
      </li>
      <li>
        <p class="w3-text-teal">Message: <%= forms.subject %></p>
        <p><%= forms.message %></p>
      </li>
    </ul>
  </div>
  </div> 
  <% }); %>

  </div>
  

  <hr>

<% include ../partials/footer %>